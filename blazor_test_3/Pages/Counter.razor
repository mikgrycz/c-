@page "/counter"
<h1>Counter</h1>
<p>Current count: @currentCount</p>
<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
@code {
	//Sekcja z kodem
	private int currentCount = 0;
	private void IncrementCount() // Metoda którą wywołujemy po naciśnięciu guzika
	{
		currentCount++;
	}
}
